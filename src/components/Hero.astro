---
import { Copy } from "lucide-astro";
---

<section
    class="relative min-h-[90vh] flex flex-col items-center justify-center pt-20 overflow-hidden"
>
    <!-- Background Elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-[20%] left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-accent-primary/10 rounded-full blur-[120px] animate-pulse-slow"
        >
        </div>
        <div
            class="absolute bottom-0 left-[20%] w-[500px] h-[500px] bg-accent-purple/10 rounded-full blur-[100px] animate-pulse-slow"
            style="animation-delay: 2s;"
        >
        </div>

        <!-- Grid Pattern overlay -->
        <div
            class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_50%,#000_70%,transparent_100%)]"
        >
        </div>
    </div>

    <div
        class="relative z-10 max-w-5xl mx-auto px-6 text-center flex flex-col items-center"
    >
        <!-- Badge -->
        <div
            class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 mb-8 animate-fade-in-up"
        >
            <span class="relative flex h-2 w-2">
                <span
                    class="animate-ping absolute inline-flex h-full w-full rounded-full bg-accent-primary opacity-75"
                ></span>
                <span
                    class="relative inline-flex rounded-full h-2 w-2 bg-accent-primary"
                ></span>
            </span>
            <span
                class="text-xs font-medium text-neutral-300 tracking-wide uppercase"
                >v1.0.4 Now Available</span
            >
        </div>

        <!-- Main Heading -->
        <h1
            class="text-6xl md:text-8xl font-bold tracking-tight text-white mb-6 animate-fade-in-up"
            style="animation-delay: 0.1s; font-family: var(--font-handwritten);"
        >
            Snakeskin <span
                class="text-transparent bg-clip-text bg-gradient-to-r from-accent-primary to-accent-secondary"
                >Framework</span
            >
        </h1>

        <!-- Tagline -->
        <p
            class="text-xl md:text-2xl text-neutral-400 max-w-2xl mb-12 leading-relaxed animate-fade-in-up"
            style="animation-delay: 0.2s;"
        >
            The modern Python-powered component framework. <br
                class="hidden md:block"
            />
            Build reactive web apps with clean, pythonic code.
        </p>

        <!-- Install Command (Visual Representation) -->
        <div
            class="group relative animate-fade-in-up"
            style="animation-delay: 0.3s;"
        >
            <div
                class="absolute -inset-1 bg-gradient-to-r from-accent-primary to-accent-secondary rounded-xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"
            >
            </div>

            <div
                class="relative flex items-center gap-4 px-6 py-4 bg-[#0A0A0A] rounded-xl border border-white/10 ring-1 ring-white/5"
            >
                <span class="text-accent-purple font-mono">$</span>
                <div
                    class="font-mono text-lg text-neutral-200 min-w-[280px] text-left"
                >
                    <span id="typewriter"></span><span
                        class="animate-pulse text-accent-primary">_</span
                    >
                </div>
                <button
                    class="ml-4 p-2 rounded-lg hover:bg-white/10 text-neutral-500 hover:text-white transition-colors"
                    aria-label="Copy Command"
                >
                    <Copy class="w-5 h-5" />
                </button>
            </div>
        </div>

        <!-- Actions -->
        <div
            class="mt-12 flex flex-col sm:flex-row items-center gap-4 animate-fade-in-up"
            style="animation-delay: 0.4s;"
        >
            <a
                href="/docs"
                class="px-8 py-3.5 rounded-lg bg-white text-black font-semibold hover:bg-neutral-200 transition-colors"
            >
                Get Started
            </a>
            <a
                href="https://github.com/xplnhub/snakeskin"
                target="_blank"
                class="px-8 py-3.5 rounded-lg bg-white/5 border border-white/10 text-white font-medium hover:bg-white/10 transition-colors"
            >
                View on GitHub
            </a>
        </div>
    </div>
</section>

<script>
    const text = "pip install snakeskin-xplnhub";
    const typewriter = document.getElementById("typewriter");
    let i = 0;

    function type() {
        if (i < text.length && typewriter) {
            typewriter.innerHTML += text.charAt(i);
            i++;
            setTimeout(type, 50 + Math.random() * 50);
        }
    }

    // Start typing when element is in view
    const observer = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
            if (entry.isIntersecting) {
                setTimeout(type, 1000);
                observer.disconnect();
            }
        });
    });

    if (typewriter) {
        observer.observe(typewriter);
    }
</script>
