<section class="py-24 bg-white/5 border-y border-white/5">
    <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col lg:flex-row items-start gap-12">
            <div class="lg:w-1/3">
                <h2 class="text-4xl font-bold text-white mb-6">Battery-Included UI Library</h2>
                <p class="text-slate-400 mb-8 leading-relaxed">
                    Don't waste time building basic components. Snakeskin comes with a comprehensive set of accessible, unstyled primitives that you can customize with simple props.
                </p>
                
                <div class="space-y-4">
                    <button class="w-full text-left px-6 py-4 rounded-xl bg-white/5 hover:bg-white/10 border border-white/5 text-white font-medium transition-all flex items-center justify-between group active-tab-btn" data-target="btn-preview">
                        <span>Buttons & Inputs</span>
                        <span class="text-neon-green opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                    </button>
                    <button class="w-full text-left px-6 py-4 rounded-xl hover:bg-white/5 border border-transparent hover:border-white/5 text-slate-400 hover:text-white transition-all flex items-center justify-between group" data-target="card-preview">
                        <span>Cards & Layouts</span>
                        <span class="text-neon-green opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                    </button>
                    <button class="w-full text-left px-6 py-4 rounded-xl hover:bg-white/5 border border-transparent hover:border-white/5 text-slate-400 hover:text-white transition-all flex items-center justify-between group" data-target="modal-preview">
                        <span>Modals & Overlays</span>
                        <span class="text-neon-green opacity-0 group-hover:opacity-100 transition-opacity">→</span>
                    </button>
                </div>
            </div>

            <div class="lg:w-2/3 w-full bg-[#0F1117] rounded-2xl border border-white/10 overflow-hidden relative min-h-[400px] flex items-center justify-center">
                <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.05)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.05)_1px,transparent_1px)] bg-[size:40px_40px] opacity-20"></div>

                <!-- Preview: Buttons -->
                <div id="btn-preview" class="preview-content w-full p-12 flex flex-col items-center gap-6">
                    <div class="flex gap-4">
                        <button class="px-6 py-2 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 transition">Primary</button>
                        <button class="px-6 py-2 rounded-lg bg-white/10 text-white font-medium hover:bg-white/20 transition">Secondary</button>
                        <button class="px-6 py-2 rounded-lg border border-white/20 text-white font-medium hover:border-white/40 transition">Outline</button>
                    </div>
                    <div class="w-full max-w-sm mt-8">
                        <label class="block text-xs font-medium text-slate-400 mb-2">Email Address</label>
                        <input type="email" placeholder="hello@snakeskin.dev" class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-2 text-white focus:outline-none focus:border-neon-green transition-colors" />
                    </div>
                </div>

                 <!-- Preview: Cards -->
                 <div id="card-preview" class="preview-content hidden w-full p-12 flex justify-center">
                    <div class="w-full max-w-sm bg-black/40 border border-white/10 rounded-xl overflow-hidden shadow-2xl">
                        <div class="h-32 bg-gray-800 animate-pulse"></div>
                        <div class="p-6">
                            <div class="h-6 w-3/4 bg-gray-800 rounded animate-pulse mb-4"></div>
                            <div class="h-4 w-full bg-gray-800/50 rounded animate-pulse mb-2"></div>
                            <div class="h-4 w-2/3 bg-gray-800/50 rounded animate-pulse"></div>
                        </div>
                    </div>
                </div>

                 <!-- Preview: Modal -->
                 <div id="modal-preview" class="preview-content hidden w-full p-12 flex justify-center">
                    <div class="bg-[#1a1d24] border border-white/10 rounded-xl p-8 max-w-sm shadow-2xl transform scale-100 text-center">
                        <h3 class="text-xl font-bold text-white mb-2">Delete Project?</h3>
                        <p class="text-slate-400 mb-6 text-sm">This action cannot be undone. Are you sure you want to proceed?</p>
                        <div class="flex gap-3 justify-center">
                            <button class="px-4 py-2 rounded-lg bg-white/5 text-white hover:bg-white/10">Cancel</button>
                            <button class="px-4 py-2 rounded-lg bg-red-500/10 text-red-500 border border-red-500/20 hover:bg-red-500/20">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    // Simple vanilla JS tab switching
    const buttons = document.querySelectorAll('[data-target]');
    const contents = document.querySelectorAll('.preview-content');

    buttons.forEach(btn => {
        btn.addEventListener('click', () => {
            // Update buttons
            buttons.forEach(b => {
                const isSelected = b === btn;
                b.classList.toggle('bg-white/5', isSelected);
                b.classList.toggle('text-white', isSelected);
                b.classList.toggle('text-slate-400', !isSelected);
                b.classList.toggle('hover:bg-white/5', !isSelected);
            });

            // Show content
            const targetId = btn.getAttribute('data-target');
            if (targetId) { // Check if targetId is not null
                 contents.forEach(content => {
                    if (content.id === targetId) {
                        content.classList.remove('hidden');
                        // Small animation reset
                        content.animate([
                            { opacity: 0, transform: 'translateY(10px)' },
                            { opacity: 1, transform: 'translateY(0)' }
                        ], { duration: 300, easing: 'ease-out' });
                    } else {
                        content.classList.add('hidden');
                    }
                });
            }
           
        });
    });
</script>
